{
	"manifest_version": 2,
	"name": "Youtube Shorts Playlists",
	"version": "1.0",
	"description": "Adds a button to Youtube Shorts to add the video to a playlist",
	"permissions": ["activeTab", "storage"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "Youtube Shorts Playlists"
	},
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"96": "icons/96.png"
	}
}
